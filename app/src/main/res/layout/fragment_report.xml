<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB">
<!--    tools:context=".fragments.ReportFragment"-->

    <!-- App Bar với toolbar và bộ lọc -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Báo cáo tài chính"
            app:titleTextColor="#1A237E"
            app:menu="@menu/report_menu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:background="#F5F7FB">

            <!-- Bộ lọc thời gian -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTimeFilter"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tháng này"
                app:icon="@drawable/calendar"
                app:iconTint="#1A237E"
                app:strokeColor="#1A237E"/>

            <!-- Bộ lọc danh mục -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCategoryFilter"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Tất cả danh mục"
                app:icon="@drawable/category"
                app:iconTint="#1A237E"
                app:strokeColor="#1A237E"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nội dung chính -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tổng quan tài chính -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Thẻ Tổng thu -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng thu"
                            android:textColor="#6E6E6E"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvTotalIncome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.200.000 ₫"
                            android:textColor="#4CAF50"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Thẻ Tổng chi -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng chi"
                            android:textColor="#6E6E6E"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvTotalExpense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.750.000 ₫"
                            android:textColor="#F44336"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Thẻ Tiết kiệm -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    android:layout_marginStart="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiết kiệm"
                            android:textColor="#6E6E6E"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvTotalSavings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.450.000 ₫"
                            android:textColor="#2196F3"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Biểu đồ phân bổ chi tiêu -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phân bổ chi tiêu"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_margin="16dp"/>

                    <!-- Placeholder cho biểu đồ -->
                    <View
                        android:id="@+id/chartPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"
                        android:layout_margin="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bảng dữ liệu chi tiết -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi tiết giao dịch"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <!-- Header của bảng -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#1A237E"
                        android:paddingVertical="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Danh mục"
                            android:textColor="@android:color/white"
                            android:paddingStart="16dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Số tiền"
                            android:textColor="@android:color/white"
                            android:textAlignment="textEnd"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ngày"
                            android:textColor="@android:color/white"
                            android:paddingEnd="16dp"
                            android:textAlignment="textEnd"
                            android:textStyle="bold"/>
                    </TableRow>

                    <!-- Dữ liệu mẫu (sẽ thay bằng RecyclerView sau) -->
                    <!-- Giao dịch 1 -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Ăn uống"
                            android:paddingStart="16dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="150.000 ₫"
                            android:textColor="#F44336"
                            android:textAlignment="textEnd"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="15/07"
                            android:textAlignment="textEnd"
                            android:paddingEnd="16dp"/>
                    </TableRow>

                    <!-- Giao dịch 2 -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="12dp"
                        android:background="#F5F5F5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Lương tháng"
                            android:paddingStart="16dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="2.000.000 ₫"
                            android:textColor="#4CAF50"
                            android:textAlignment="textEnd"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="05/07"
                            android:textAlignment="textEnd"
                            android:paddingEnd="16dp"/>
                    </TableRow>

                    <!-- Giao dịch 3 -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="12dp"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Mua sách"
                            android:paddingStart="16dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="250.000 ₫"
                            android:textColor="#F44336"
                            android:textAlignment="textEnd"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10/07"
                            android:textAlignment="textEnd"
                            android:paddingEnd="16dp"/>
                    </TableRow>

                    <!-- Nút xem thêm -->
                    <Button
                        android:id="@+id/btnViewMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xem thêm giao dịch"
                        android:layout_marginTop="16dp"
                        android:background="@null"
                        android:textColor="#1A237E"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>